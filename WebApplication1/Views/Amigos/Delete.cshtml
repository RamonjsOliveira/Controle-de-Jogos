@model GamesRente.Models.Amigo

@{
    ViewBag.Title = "Excluir Amigo";
}

<h2>Excluir Amigo</h2>

<h3>Tem certeza que quer excluir o @Model.Nome da sua lista de amigos?</h3>
<div>
    <h4>Amigo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataCadastro)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataCadastro)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-danger" />
            @Html.ActionLink("Voltar", "Index", null, new {@class="btn btn-info" })
        </div>
    }
</div>

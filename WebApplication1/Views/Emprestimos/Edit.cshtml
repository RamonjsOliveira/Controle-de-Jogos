@model GamesRente.Models.Emprestimo

@{
    ViewBag.Title = "Emprestimos";
}

<h2>Editar Emprestimo</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Emprestimo feito para o @Model.Amigo.Nome do @Model.Jogo.Nome</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Datacadastro, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Datacadastro, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.Datacadastro)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DataDevolucao, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.DataDevolucao, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.DataDevolucao)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AmigoId, "Amigo", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("AmigoId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.AmigoId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.JogoId, "Jogo", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("JogoId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.JogoId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Salvar" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Voltar", "Index",null,new {@class="btn btn-info" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
